---
import Header from "../components/Header.astro";
import "@unocss/reset/tailwind.css";
import "uno.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content={"Brandon Ma's web developer portfolio and blog"}
    />
    <title>{title ?? "Brandon Ma - Web Dev"}</title>
    <script defer data-domain="brandma.dev" src="https://vibeoftheweek.com/js/script.js"></script>
  </head>
  <script>
    (function () {
      const prefersDark =
        window.matchMedia &&
        window.matchMedia("(prefers-color-scheme: dark)").matches;
      const setting = localStorage.getItem("color-schema") || "auto";
      if (setting === "dark" || (prefersDark && setting !== "light"))
        document.documentElement.classList.toggle("dark", true);
    })();
  </script>
  <body font-sans>
    <Header />
    <main class="mb-6">
      <slot />
    </main>

    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-bg: hsl(10, 21%, 95%);
        --color-border: hsl(17, 24%, 90%);
      }

      html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: white;
      }

      html.dark {
        color: white;
        background-color: black;
      }

      body {
        margin: 0;
        padding-left: clamp(2rem, 10vw, 20rem);
        padding-right: clamp(2rem, 10vw, 20rem);
      }

      main {
        padding: 0;
        width: 100%;
        padding-top: 40px;
      }

      .accent-gradient {
        background-image: linear-gradient(
          120deg,
          hsl(177deg 69% 41%) 0%,
          hsl(162deg 67% 58%) 23%,
          hsl(148deg 66% 76%) 37%,
          hsl(139deg 69% 74%) 52%,
          hsl(136deg 78% 51%) 68%,
          hsl(133deg 88% 28%) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
      }
    </style>
  </body>
</html>
