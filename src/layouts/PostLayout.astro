---
import Header from "../components/Header.astro";
import "@unocss/reset/tailwind.css";
import "uno.css";
import { PostFrontMatter } from "../lib/types";

export interface Props {
  title?: string;
}

const {
  title,
  meta: { description },
} = Astro.props.frontmatter as PostFrontMatter;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content={description ?? "Brandon Ma's web developer portfolio and blog"}
    />
    <title>{title}</title>
  </head>
  <script>
    (function () {
      const prefersDark =
        window.matchMedia &&
        window.matchMedia("(prefers-color-scheme: dark)").matches;
      const setting = localStorage.getItem("color-schema") || "auto";
      if (setting === "dark" || (prefersDark && setting !== "light"))
        document.documentElement.classList.toggle("dark", true);
    })();
  </script>
  <body font-sans>
    <Header />
    <main font-body>
      <h2>{title}</h2>
      <slot />
    </main>

    <style scoped>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-bg: hsl(10, 21%, 95%);
        --color-border: hsl(17, 24%, 90%);
      }

      html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: white;
      }

      html.dark {
        color: white;
        background-color: black;
      }

      body {
        margin: 0;
        padding-left: clamp(2rem, 10vw, 20rem);
        padding-right: clamp(2rem, 10vw, 20rem);
      }

      main {
        padding: 0;
        width: 100%;
        padding-top: 40px;
        margin-bottom: 40px;
      }

      h2 {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 20px 0;
        color: #1e40af;
      }

      html.dark h2 {
        color: #3b82f6;
      }

      h3 {
        font-size: 1.5rem;
        padding: 10px 0;
        font-weight: 500;
      }
    </style>

    <style is:global>
      h3 {
        font-size: 1.5rem;
        padding: 10px 0;
        font-weight: 500;
        color: #e96b04;
      }

      html.dark h3 {
        color: #f27e20;
      }

      code.inline {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
        font-size: 0.9em;
        padding: 3px;
        border-radius: 2px;
        color: black;
        background-color: rgb(185, 209, 254);
      }

      pre.astro-code {
        padding: 20px;
        border-radius: 10px;
        font-size: min(0.9rem, 0.4rem + 0.7vw);
        overflow-x: auto;
        line-height: 1.2;
      }

      ul {
        list-style: circle;
        padding: 0 20px;
      }

      p {
        margin: 20px 0;
      }

      main a {
        color: rgb(38, 187, 162);
        text-decoration: underline;
        transition: color 200ms linear;
      }

      main a:hover {
        color: rgb(36, 216, 168);
      }

      img {
        margin: auto;
        max-width: 600px;
        width: 100%;
      }
    </style>
  </body>
</html>
