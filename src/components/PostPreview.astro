---
import { PostData } from "../lib/types";

const props = Astro.props as { post: PostData };
---

<div class="flex flex-row gap-5 items-center">
  <span class="grow flex flex-col self-start">
    <a href={props.post.url} class="decoration-none">
      <h3 class="text-md text-primary">{props.post.title}</h3>
    </a>
    <p class="my-0 mb-1">
      {props.post.published}
    </p>
    <p class="font-body text-sm font-light my-0">
      {props.post.preview.description}
    </p>
  </span>
</div>
